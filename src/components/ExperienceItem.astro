---
interface Props {
    date: String;
    title: String;
    company: String;
    description: String;
    link?: String;
}
const { date, title, company, description, link } = Astro.props;
---

<div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white"></div>
<time class="mb-1 text-sm font-normal leading-none text-gray-300">{date}</time>
<h3 class="text-lg font-semibold text-yellow-200/90 mt-2">
    {title} — {company}
</h3>
<p class="mb-4 text-base font-normal text-white" style="white-space: pre-line;">
    {description}
</p>
{
    link && (
        <a href="#experiencia" class="inline-flex items-center py-1 px-2 md:py-2 md:px-4
            text-xs md:text-base bg-white/5 border border-white/10 rounded-full
            transition hover:scale-105 hover:bg-white/10">
            Saber más{" "}
            <svg class="w-3 h-3 ms-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg"
                fill="none" viewBox="0 0 14 10">
                <path stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M1 5h12m0 0L9 1m4 4L9 9" />
            </svg>
        </a>
    )
}
