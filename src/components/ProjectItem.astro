---
interface Props {
    title: String;
    description: String;
    link: String;
    github: String;
    image: string;
    tags: String[]
}
const { title, description, link, github, image, tags } = Astro.props;
---

<h3 class="text-lg font-semibold text-yellow-200/90 mt-2">
    {title}
</h3>
<p class="mb-4 text-base font-normal text-white">
    {description}
</p>
<img
    class="rounded max-w-md"
    src={image}
    alt={`Captura de pantalla del proyecto ${image}`}
/>